<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yönetim Paneli - KOLAY</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f6fa;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background: #2C3E50;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            padding: 2rem 1rem;
            color: white;
        }

            .sidebar h2 {
                font-size: 1.5rem;
                color: #DAA520;
                text-align: center;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
                margin-top: 2rem;
            }

                .sidebar ul li {
                    margin-bottom: 1rem;
                }

                    .sidebar ul li a {
                        text-decoration: none;
                        color: white;
                        display: flex;
                        align-items: center;
                        gap: 0.75rem;
                        font-size: 1rem;
                        padding: 0.5rem;
                        border-radius: 5px;
                        transition: background 0.3s ease;
                    }

                        .sidebar ul li a:hover,
                        .sidebar ul li a.active {
                            background: rgba(218, 165, 32, 0.2);
                        }

        .content {
            margin-left: 250px;
            padding: 2rem;
        }

        .header {
            background: white;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            margin-bottom: 2rem;
        }

            .header h1 {
                font-size: 1.5rem;
                color: #2C3E50;
            }

            .header .user-info {
                display: flex;
                align-items: center;
                gap: 1rem;
            }

        .footer {
            text-align: center;
            padding: 1rem;
            background: #ecf0f1;
            margin-top: 2rem;
            color: #555;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>KOLAY PANEL</h2>
        <ul>
            <li><a asp-controller="Home" asp-action="Index" class="active"><i class="fas fa-chart-line"></i> Kontrol Paneli</a></li>
            <li><a asp-controller="Hotels" asp-action="Index"><i class="fas fa-hotel"></i> Oteller</a></li>
            <li><a asp-controller="Rooms" asp-action="Index"><i class="fas fa-door-open"></i> Odalar</a></li>
            <li><a asp-controller="Reservations" asp-action="Index"><i class="fas fa-calendar-check"></i> Rezervasyonlar</a></li>
            <li><a asp-controller="Customers" asp-action="Index"><i class="fas fa-users"></i> Müşteriler</a></li>
            <li><a asp-controller="ReservationsReport" asp-action="Index"><i class="fas fa-file-alt"></i> Raporlar</a></li>
        </ul>
    </div>

    <div class="content">
        <div class="header">
            <h1>@ViewData["Title"]</h1>
            <div class="user-info">
                <span>Admin</span>
                <i class="fas fa-user-circle fa-2x text-secondary"></i>
            </div>
        </div>

        @RenderBody()

        <div class="footer">
            &copy; 2025 Kolay Otel Yönetim Paneli. Tüm hakları saklıdır.
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
