@model IEnumerable<ReservationsReportViewModel>

@{
    ViewData["Title"] = "Rezervasyon Raporu";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-5">
    <h2 class="mb-4">Rezervasyon Raporu</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Müşteri Adı</th>
                    <th>Otel</th>
                    <th>Oda</th>
                    <th>Giriş Tarihi</th>
                    <th>Çıkış Tarihi</th>
                    <th>Gün</th>
                    <th>Gece Fiyatı</th>
                    <th>Toplam Tutar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Select((x, i) => new { x, i }))
                {
                    <tr>
                        <td>@(item.i + 1)</td>
                        <td>@item.x.CustomerName</td>
                        <td>@item.x.HotelName</td>
                        <td>@item.x.RoomNumber</td>
                        <td>@item.x.CheckInDate.ToString("dd.MM.yyyy")</td>
                        <td>@item.x.CheckOutDate.ToString("dd.MM.yyyy")</td>
                        <td>@item.x.TotalNights</td>
                        <td>@item.x.PricePerNight.ToString("C")</td>
                        <td class="fw-bold text-success">@item.x.TotalPrice.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            Henüz bir rezervasyon bulunmamaktadır.
        </div>
    }
</div>
