@model IEnumerable<dynamic>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Odalar | Lüks Otel</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        :root {
            --gold: #DAA520;
            --dark-blue: #2C3E50;
            --light-bg: #FAFAFA;
            --text-dark: #333;
            --text-medium: #555;
            --radius: 1rem;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
            --transition: 0.3s ease;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light-bg);
            color: var(--text-dark);
            line-height: 1.6;
            padding: 0 1rem;
        }

        header {
            background-color: var(--dark-blue);
            color: white;
            padding: 1.2rem 0;
            text-align: center;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .filters {
            max-width: 1200px;
            margin: 2rem auto;
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: space-between;
        }

            .filters input,
            .filters select {
                padding: 0.6rem 1rem;
                border-radius: var(--radius);
                border: 1px solid #ccc;
                flex: 1 1 200px;
                min-width: 150px;
                font-size: 1rem;
            }

            .filters button {
                background: linear-gradient(to right, #B8860B, #DAA520);
                border: none;
                color: white;
                padding: 0.7rem 1.5rem;
                font-weight: 600;
                border-radius: var(--radius);
                cursor: pointer;
                transition: var(--transition);
            }

                .filters button:hover {
                    transform: scale(1.02);
                    box-shadow: var(--shadow);
                }

        .room-grid {
            max-width: 1200px;
            margin: auto;
            display: grid;
            gap: 2rem;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            padding-bottom: 3rem;
        }

        .room-card {
            background: rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(12px);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            overflow: hidden;
            transition: var(--transition);
        }

            .room-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

        .room-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .room-body {
            padding: 1rem;
        }

            .room-body h3 {
                margin-bottom: 0.5rem;
                font-size: 1.2rem;
                color: var(--dark-blue);
            }

            .room-body p {
                margin: 0.3rem 0;
                font-size: 0.95rem;
                color: var(--text-medium);
            }

        .room-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            border-top: 1px solid #eee;
        }

            .room-footer span {
                font-weight: 600;
                color: var(--gold);
            }

            .room-footer button {
                background: transparent;
                border: 2px solid var(--gold);
                padding: 0.5rem 1rem;
                border-radius: var(--radius);
                color: var(--gold);
                font-weight: 600;
                cursor: pointer;
                transition: var(--transition);
            }

                .room-footer button:hover {
                    background: var(--gold);
                    color: white;
                }

        footer {
            background-color: var(--dark-blue);
            color: white;
            text-align: center;
            padding: 2rem 1rem;
            font-size: 0.9rem;
        }

        @@media (max-width: 768px) {
            .filters

        {
            flex-direction: column;
            gap: 1rem;
        }

        }
    </style>
</head>
<body>


    <header>
        <h1>Odalarımız</h1>
        <p>Lüks ve konforla tasarlanmış modern odalar</p>
    </header>

    <section class="filters">
        <form asp-action="Index" method="get" class="d-flex flex-wrap gap-2">
            <input type="text" name="name" placeholder="Otel Adı" class="form-control" value="@Context.Request.Query["name"]" />
            <input type="text" name="roomNum" placeholder="Oda Numarası" class="form-control" value="@Context.Request.Query["roomNum"]" />
            <input type="number" name="capacity" placeholder="Kapasite" class="form-control" value="@Context.Request.Query["capacity"]" />
            <input type="number" name="price" placeholder="Maks. Gecelik Fiyat" class="form-control" value="@Context.Request.Query["price"]" />
            <button type="submit" class="btn btn-warning">Filtrele</button>
        </form>
    </section>

    <section class="room-grid">
        @foreach (var item in Model)
        {
            <div class="room-card">
                <img src="https://source.unsplash.com/400x300/?hotel-room,@item.RoomNumber" alt="Oda @item.RoomNumber" class="room-image" />
                <div class="room-body">
                    <h3>@("Oda No: " + item.RoomNumber)</h3>
                    <p><strong>Otel Adı:</strong> @item.HotelName</p>
                    <p><strong>Kapasite:</strong> @item.Capacity kişi</p>
                    <p><strong>Fiyat:</strong> ₺@item.PricePerNight</p>
                </div>
                <div class="room-footer">
                    <span>₺@item.PricePerNight / Gece</span>
                    <a asp-action="CreateAndUpdate" asp-controller="Rooms" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Detayları Gör</a>
                </div>
            </div>
        }
    </section>

    <footer>
        &copy; 2025 Lüks Otel. Tüm Hakları Saklıdır. | <a href="#" style="color: #DAA520;">Gizlilik Politikası</a>
    </footer>

</body>
</html>
