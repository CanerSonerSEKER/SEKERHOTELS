@model SEKERHOTELS.Models.CustomersModel

@{
    ViewData["Title"] = Model.Id == 0 ? "Yeni Müşteri Ekle" : "Müşteri Bilgi Güncelle";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>

        <div class="card-body">
            <form asp-action="CreateAndUpdate" asp-controller="Customers" method="post" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label class="form-label fw-semibold"> Müşteri Adı Soyadı :</label>
                    <input asp-for="FullName" type="text" class="form-control form-control-lg" placeholder="Ad soyad giriniz..." />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Email :</label>
                    <input asp-for="Email" type="text" class="form-control form-control-lg" placeholder="Email adresi giriniz..." />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Telefon Numarası : </label>
                    <input asp-for="Phone" type="text" class="form-control form-control-lg" placeholder="Telefon Numarası Giriniz ..." />
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-check-circle-fill"></i> Kaydet
                    </button>
                    <a asp-action="Index" asp-controller="Customers" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle-fill"></i> Vazgeç
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>