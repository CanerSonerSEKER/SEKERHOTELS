@model IEnumerable<SEKERHOTELS.Models.RoomTypesModel>

@{
    ViewData["Title"] = "Oda Tipleri";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Oda Tipleri</h2>
        <a asp-action="CreateAndUpdate" asp-controller="RoomTypes" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Yeni Oda Tipi Ekle
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered table-striped table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Oda Tipi</th>
                            <th>Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="CreateAndUpdate" asp-controller="RoomTypes" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">
                                        <i class="bi bi-pencil-square"></i> Düzenle
                                    </a>
                                    <a asp-action="Index" asp-controller="RoomTypes" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu oda tipini silmek istediğinizden emin misiniz?');">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    Henüz herhangi bir oda tipi eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons (opsiyonel ama ikonları gösterir) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
